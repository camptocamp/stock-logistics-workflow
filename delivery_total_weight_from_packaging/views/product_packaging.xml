<odoo>

    <record id="product_packaging_form_view_inherit" model="ir.ui.view">
      <field name="name">product.packaging.form.inherit</field>
      <field name="model">product.packaging</field>
      <field name="inherit_id" ref="product_packaging_dimension.product_packaging_form_view_inherit"/>
      <field name="arch" type="xml">
        <xpath expr="//label[@for='max_weight']" position="before">
            <label for="base_weight"/>
            <div class="o_row" name="base_weight">
              <field name="base_weight"/>
              <span><field name="weight_uom_name"/></span>
            </div>
        </xpath>
      </field>
    </record>

</odoo>
